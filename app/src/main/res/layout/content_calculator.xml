<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_calculator"
    tools:context="com.kondratenko.hitassistant.Calculator"
    android:background="@drawable/green2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button10"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button12"
        android:layout_alignBottom="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button13"
        android:layout_alignBottom="@+id/button12"
        android:layout_alignEnd="@+id/button8"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button14"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button15"
        android:layout_alignBottom="@+id/button14"
        android:layout_toEndOf="@+id/button14"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button16"
        android:layout_alignBottom="@+id/button15"
        android:layout_alignEnd="@+id/button13"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button17"
        android:layout_below="@+id/button14"
        android:layout_alignParentStart="true"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button18"
        android:layout_below="@+id/button14"
        android:layout_alignEnd="@+id/button16"
        android:layout_toEndOf="@+id/button14"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button19"
        android:layout_above="@+id/button13"
        android:layout_toEndOf="@+id/button18"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button20"
        android:layout_above="@+id/button16"
        android:layout_toEndOf="@+id/button13"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/button21"
        android:layout_alignBottom="@+id/button16"
        android:layout_toEndOf="@+id/button16"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/button22"
        android:layout_alignBottom="@+id/button18"
        android:layout_toEndOf="@+id/button18"
        android:onClick="OnClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/button23"
        android:onClick="clear"
        android:allowUndo="false"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView9"
        android:layout_above="@+id/button23"
        android:layout_alignEnd="@+id/button19"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:inputType="number|numberSigned|numberDecimal"
        android:lines="1"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:textColor="#ffffff"
        android:numeric="signed|integer|decimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView9"
        android:paddingLeft="10dp"
        android:textColor="#ffffff" />

</RelativeLayout>
