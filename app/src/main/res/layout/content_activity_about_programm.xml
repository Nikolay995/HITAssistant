<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_about_programm"
    tools:context="com.kondratenko.hitassistant.ActivityAboutProgramm"
    android:background="@drawable/greenback">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Help In Touch"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Багатофункціональний органайзер,\nякий завжди під рукою"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Розробник:\nКондратенко Микола (І-41)"
        android:id="@+id/textView8"
        android:textAlignment="center"
        android:textColorHighlight="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView13"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView13"
        android:src="@drawable/dox"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Assistant"
        android:id="@+id/textView18"
        android:textColor="#ffffff"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/textView19"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Версія програми: v1.0"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/imageView13" />

    <ImageView
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:id="@+id/imageView14"
        android:src="@drawable/vk"
        android:layout_gravity="center"
        android:onClick="govk"
        android:layout_alignTop="@+id/imageView15"
        android:layout_alignStart="@+id/textView5" />

    <ImageView
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:id="@+id/imageView15"
        android:src="@drawable/google"
        android:onClick="gogoogle"
        android:layout_alignTop="@+id/imageView16"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:id="@+id/imageView16"
        android:src="@drawable/twittericon"
        android:layout_marginTop="8dp"
        android:onClick="gotwitter"
        android:layout_below="@+id/textView19"
        android:layout_alignEnd="@+id/textView5" />

</RelativeLayout>
